<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.bnk.bnk_project.mapper.AdminMapper">

    <select id="findByAdminId" parameterType="string" resultType="kr.co.bnk.bnk_project.dto.BnkAdminDTO">
        SELECT
            admin_no   AS adminNo,
            admin_id   AS adminId,
            password,
            admin_name AS adminName,
            role
        FROM
            bnk_admin
        WHERE
            admin_id = #{adminId}
    </select>

</mapper>