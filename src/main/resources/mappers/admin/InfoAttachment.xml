<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.bnk.bnk_project.mapper.admin.InfoAttachmentMapper">


    <!-- 파일첨부 -->
    <insert id="insertInfoAttachment" parameterType="kr.co.bnk.bnk_project.dto.admin.InfoAttachmentDTO">
        <selectKey keyProperty="attachmentId" resultType="int" order="BEFORE">
            SELECT info_attachment_seq.NEXTVAL FROM dual
        </selectKey>

        INSERT INTO info_attachment(
        attachment_id,
        post_id,
        file_name,
        file_path,
        sort_order
        ) VALUES (
        #{attachmentId},
        #{postId},
        #{fileName},
        #{filePath},
        #{sortOrder}
        )
    </insert>

    <!-- 첨부파일 조회 -->
    <select id="selectByPostId" resultType="kr.co.bnk.bnk_project.dto.admin.InfoAttachmentDTO">
        SELECT *
        FROM info_attachment
        WHERE post_id = #{postId}
    </select>

    <!-- 첨부파일 삭제 -->
    <delete id="deleteByPostId">
        DELETE FROM info_attachment
        WHERE post_id = #{postId}
    </delete>

</mapper>